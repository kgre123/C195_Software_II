<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainScreen">
   <children>
      <Label fx:id="welcomeLabel" alignment="CENTER" layoutY="42.0" prefHeight="17.0" prefWidth="600.0" text="Welcome!" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Button fx:id="customerButton" layoutX="133.0" layoutY="273.0" mnemonicParsing="false" onAction="#onActionCustomerScreen" text="Customers" />
      <Button fx:id="appointmentButton" layoutX="254.0" layoutY="273.0" mnemonicParsing="false" onAction="#onActionAppointmentScreen" text="Appointments" />
      <Label fx:id="instructionLabel" alignment="CENTER" layoutY="242.0" prefHeight="17.0" prefWidth="600.0" text="Please select an option to view or modify">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="exitButton" layoutX="283.0" layoutY="361.0" mnemonicParsing="false" onAction="#onActionExitProgram" text="Exit" />
      <Button fx:id="reportsButton" layoutX="395.0" layoutY="273.0" mnemonicParsing="false" onAction="#onActionReports" text="Reports" />
   </children>
</AnchorPane>
